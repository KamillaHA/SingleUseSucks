---
import { Image } from "astro:assets";
import hero from "../assets/images/hero_uden_tekst.svg";
import PrimaryBtn from "./PrimaryBtn.astro";
import "../styles/global.css";
---

<section id="Herounit" class="relative h-screen overflow-hidden">
  <div class="w-full h-screen relative">
    <Image
      src={hero}
      alt="digital clean up billede"
      class="w-full h-100 object-cover"
    />
    <h1
      class="text-sky-950 absolute top-1/3 left-1/2 transform -translate-x-1/2 -translate-y-1/2 text-6xl font-bold text-center"
    >
      Sammen om en <span class="inline-block animate-wave">verden</span> uden <span
        class="inline-block animate-wave">plastikforurening</span
      >
    </h1>
    <h2
      class="text-sky-950 absolute top-1/2 left-1/2 transform -translate-x-1/2 translate-y-1/3 text-lg font-bold text-center"
    >
      Støt os i kampen mod plastik i havet
    </h2>
  </div>

  <div class="absolute bottom-0 left-0 right-0 flex justify-center z-1 mb-56">
    <PrimaryBtn><a href="#Støt">Støt her</a></PrimaryBtn>
  </div>
</section>
