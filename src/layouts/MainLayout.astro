---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
import "../styles/tailwind.css";
import "animate.css";
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta
      name="description"
      content="Single Use Sucks er Plastic Change´s opråb til samfundet om, at vi skal passe på miljøet. Havet, dyrene og miljøet tager skade af engangsplast, og det vil Plastic Change gøre noget ved, og skaber et stærkt fællesskab i kampen mod plastikforurening. Vær med i kampen og støt med et abbonement eller en enkelt donation."
    />
    <meta
      name="keywords"
      content="Støt, Plastic Change, Single Use Sucks, fællesskab, plastik, plastikforurening, forurening, miljø, havet, donation"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{Astro.props.title}</title>
  </head>
  <body>
    <header class="bg-[#A2A6B4]">
      <Header />
    </header>

    <main>
      <slot />
    </main>

    <footer>
      <Footer />
    </footer>
  </body>
</html>
